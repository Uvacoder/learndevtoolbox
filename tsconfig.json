{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "esnext",
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "strict": true,
      "esModuleInterop": true,
      "incremental": false,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "types": [
        "vite/client",
        "vitepress",
        "@vite-pwa/vitepress"
      ]
    },
    "include": [
      "./*.ts",
      "./.vitepress/**/*.ts",
      "./.vitepress/**/*.vue"
    ],
    "exclude": ["dist", "node_modules"]
  }